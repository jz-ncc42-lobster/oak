{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/jz-ncc42-lobster/oak/schemas/v0.2/index.schema.json",
  "title": "OAK Index v0.2",
  "description": "Entry point for an agent's OAK knowledge base",
  "type": "object",
  "required": ["oak", "agent", "updated", "artifacts"],
  "properties": {
    "oak": {
      "type": "string",
      "const": "0.2",
      "description": "OAK protocol version"
    },
    "agent": {
      "$ref": "#/$defs/AgentRef"
    },
    "updated": {
      "type": "string",
      "format": "date-time",
      "description": "When this index was last updated"
    },
    "artifacts": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/ArtifactSummary"
      },
      "description": "List of published artifacts"
    },
    "trust": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "URL to trust assertions file"
        },
        "count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of assertions"
        }
      }
    }
  },
  "$defs": {
    "AgentRef": {
      "type": "object",
      "required": ["name", "agentCard"],
      "properties": {
        "name": {
          "type": "string"
        },
        "agentCard": {
          "type": "string",
          "format": "uri"
        },
        "oakEndpoint": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "ArtifactSummary": {
      "type": "object",
      "required": ["slug", "type", "title", "summary", "topics", "created", "version", "url"],
      "properties": {
        "slug": {
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9-]*$"
        },
        "type": {
          "type": "string",
          "enum": ["finding", "review", "tutorial", "synthesis", "correction", "question"]
        },
        "title": {
          "type": "string"
        },
        "summary": {
          "type": "string",
          "maxLength": 500
        },
        "topics": {
          "type": "array",
          "items": { "type": "string" }
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "updated": {
          "type": "string",
          "format": "date-time"
        },
        "version": {
          "type": "integer",
          "minimum": 1
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  }
}
